<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane prefHeight="560.0" prefWidth="800.0" style="-fx-background-color: #424769;"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.controllers.client.FilmDetailsController">
    <children>
        <Text fill="WHITE" layoutX="36.0" layoutY="53.0" strokeType="OUTSIDE" strokeWidth="0.0" text="АРТКино">
            <font>
                <Font name="Microsoft YaHei UI Light" size="48.0"/>
            </font>
        </Text>
        <Label fx:id="welcomeLabel" layoutX="36.0" layoutY="65.0" prefHeight="18.0" prefWidth="200.0"
               text="Добро пожаловать, {role}!" textFill="WHITE"/>
        <Label fx:id="usernameLabel" alignment="CENTER_RIGHT" layoutX="582.0" layoutY="17.0" prefHeight="18.0"
               prefWidth="138.0" text="{username}" textFill="WHITE"/>
        <Button layoutX="735.0" layoutY="14.0" onAction="#onExitButtonClick" text="Выйти"/>
        <VBox alignment="CENTER_LEFT" layoutX="588.0" layoutY="245.0" prefHeight="110.0" prefWidth="200.0"
              style="-fx-background-color: FFFFFF;">
            <children>
                <Label alignment="CENTER" text="Введите рейтинг:">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </Label>
                <ComboBox fx:id="ratingComboBox" prefHeight="26.0" prefWidth="254.0"/>
            </children>
            <padding>
                <Insets left="25.0" right="25.0"/>
            </padding>
        </VBox>
        <VBox alignment="CENTER_LEFT" layoutX="36.0" layoutY="245.0" prefHeight="110.0" prefWidth="534.0"
              style="-fx-background-color: FFFFFF;">
            <children>
                <Label alignment="CENTER" text="Написать отзыв:">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="reviewTextField" prefHeight="26.0" prefWidth="431.0">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </TextField>
                <Button fx:id="addReviewButton" mnemonicParsing="false" onAction="#addReview" text="Добавить отзыв"/>
            </children>
            <padding>
                <Insets left="25.0" right="25.0"/>
            </padding>
        </VBox>

        <TextArea fx:id="filmDetailsTextArea" layoutX="36.0" layoutY="101.0" prefHeight="129.0" prefWidth="754.0"/>
        <TextArea fx:id="reviewTextArea" layoutX="36.0" layoutY="369.0" prefHeight="129.0" prefWidth="754.0"/>
    </children>
</AnchorPane>
