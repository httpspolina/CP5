<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="560.0" prefWidth="800.0" style="-fx-background-color: #424769;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.client.PaymentController">
   <children>
        <Label text="Выберите способ оплаты:" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <VBox.margin>
            <Insets left="300.0" top="40.0" />
         </VBox.margin>
      </Label>x
      <HBox>
         <children>
              <ComboBox fx:id="paymentMethodsComboBox" prefHeight="34.0" prefWidth="282.0">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </ComboBox>
      
                                <Button onAction="#addCard" prefHeight="34.0" prefWidth="126.0" text="Добавить карту">
               <HBox.margin>
                  <Insets bottom="60.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets left="190.0" top="30.0" />
         </VBox.margin>
      </HBox>
        <VBox fx:id="cardDetailsVBox" alignment="CENTER" prefHeight="170.0" prefWidth="400.0" spacing="10" visible="false">
            <TextField fx:id="cardNumberField" promptText="Номер карты" />
            <TextField fx:id="cardholderField" promptText="Владелец карты" />
            <TextField fx:id="expiresAtField" promptText="Срок действия (yyyy-mm-dd)" />
            <TextField fx:id="cvvField" promptText="CVV" />
            <Button onAction="#saveCard" text="Сохранить карту" />
         <VBox.margin>
            <Insets bottom="120.0" />
         </VBox.margin>
        </VBox>
        <Button onAction="#buyTickets" prefHeight="46.0" prefWidth="157.0" style="-fx-background-color: F8B179;" text="Оплатить">
         <VBox.margin>
            <Insets left="320.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
