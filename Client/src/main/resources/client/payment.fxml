<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="322.0" prefWidth="600.0" spacing="10" style="-fx-background-color: #424769;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.client.PaymentController">
    <children>
        <Label text="Выберите способ оплаты" textFill="WHITE" />
        <ComboBox fx:id="paymentMethodsComboBox" prefHeight="26.0" prefWidth="200.0" />
        <VBox fx:id="cardDetailsVBox" alignment="CENTER" spacing="10" visible="false">
            <TextField fx:id="cardNumberField" promptText="Номер карты" />
            <TextField fx:id="cardholderField" promptText="Владелец карты" />
            <TextField fx:id="expiresAtField" promptText="Срок действия (yyyy-mm-dd)" />
            <TextField fx:id="cvvField" promptText="CVV" />
            <Button onAction="#saveCard" text="Сохранить карту" />
        </VBox>

        <Button onAction="#addCard" text="Добавить карту" />
        <Button onAction="#buyTickets" text="Оплатить" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
